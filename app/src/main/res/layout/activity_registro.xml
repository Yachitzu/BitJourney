<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="294dp"
                android:layout_height="74dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:fontFamily="@font/average_sans"
                android:gravity="center_horizontal|center_vertical"
                android:text="Bienvenido  "
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/user_add"
                tools:srcCompat="@drawable/user_add" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/average_sans"
                android:text="Ingresa los siguientes datos para registrarte en BitJourney"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:fontFamily="@font/average_sans"
                android:text="Nombre de Usuario"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_google_signin_btn_text_light_normal_background"
                android:ems="10"
                android:fontFamily="@font/average_sans"
                android:hint="¿Cómo te identificas?"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:fontFamily="@font/average_sans"
                android:text="Correo"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtEmailRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_google_signin_btn_text_light_normal_background"
                android:ems="10"
                android:fontFamily="@font/average_sans"
                android:hint="Tu correo va aqui."
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:fontFamily="@font/average_sans"
                android:text="Contraseña"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtPasswordRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_google_signin_btn_text_light_normal_background"
                android:ems="10"
                android:fontFamily="@font/average_sans"
                android:hint="Necesitas una contraseña "
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/average_sans"
                android:text="Repita la Contraseña"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_google_signin_btn_text_light_normal_background"
                android:ems="10"
                android:fontFamily="@font/average_sans"
                android:hint="Y aqui repites esa contraseña"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btnRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100px"
                android:layout_marginTop="50px"
                android:layout_marginRight="100px"
                android:backgroundTint="#101010"
                android:fontFamily="@font/average_sans"
                android:text="Registrarse" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150px"
                android:layout_marginTop="30px"
                android:layout_marginRight="150px"
                android:backgroundTint="#F4DFCD"
                android:fontFamily="@font/poppins"
                android:onClick="abrirLog"
                android:text="Cancelar"
                android:textColor="#000000" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>